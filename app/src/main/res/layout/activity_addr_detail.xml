<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.g4ap.slibfora.AddrDetailActivity" >

    <TextView
        android:id="@+id/act_addr_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:text="class - name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/act_addr_detail_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/act_addr_detail_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="13800000000"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/act_addr_detail_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/act_addr_detail_tel"
        android:layout_marginTop="22dp"
        android:layout_toLeftOf="@+id/act_addr_detail_tel"
        android:text="CALL" />

    <Button
        android:id="@+id/act_addr_detail_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/act_addr_detail_call"
        android:layout_alignBottom="@+id/act_addr_detail_call"
        android:layout_toRightOf="@+id/act_addr_detail_tel"
        android:text="SMS" />

</RelativeLayout>