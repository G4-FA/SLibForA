<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Space
        android:layout_width="wrap_content"
        android:layout_height="5dp" />

 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ll_callhis_state"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:src="@drawable/arrow1" />


        <TextView
            android:id="@+id/ll_callhis_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="6"
            android:maxEms="6"
            android:minEms="6"
            android:text="13800000000"
            android:textColor="#000" />

        <TextView
            android:id="@+id/ll_callhis_sec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="3"
            android:gravity="right"
            android:maxEms="3"
            android:minEms="3"
            android:text="60sec"
            android:textColor="#808080"
            android:textSize="12dp" />
        
        <Space
            android:layout_width="5dp"
            android:layout_height="wrap_content" />
        
        <TextView
            android:id="@+id/ll_callhis_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="9"
            android:maxEms="9"
            android:minEms="9"
            android:text="2014-04-04 04:04:04"
            android:textColor="#808080"
            android:textSize="12dp" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/ll_callhis_sms"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center|right"
            android:src="@drawable/email1" />


    </LinearLayout>

</LinearLayout>